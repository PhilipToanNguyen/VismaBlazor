
@page "/"
@inject IConfiguration config
@inject VismaBlazor.HttpClientPost HttpClientPost
@inject NavigationManager NavigationManager
@using CsvHelper
@using Newtonsoft.Json
@using Radzen
@using Radzen.Blazor
@using Microsoft.JSInterop;
@using System.IO
@using System.Globalization
@using System.Text
@using Microsoft.AspNetCore.Components.Forms;
@using Models
@using Microsoft.AspNetCore.Authorization

@using System.Linq

@rendermode @(new InteractiveServerRenderMode(prerender: true))
@attribute [StreamRendering]






<PageTitle>Hjem</PageTitle>

<RadzenRow AlignItems="AlignItems.Center" class="rz-text-align-center pt-2 row-cols-sm-auto" Gap="1rem" >
    <RadzenCard class="bg-opacity-10  " >
        <RadzenRow AlignItems="AlignItems.Center" class=" rz-my-5 bg-opacity-25 flex-column">
            <RadzenImage Path="bilder/addfiles.svg" Style="width: 15rem" AlternateText="import" class="p-2" />
            <RadzenButton Text="Importer fil" class="mt-4 bg-danger" Click="@ImporterPage" />
        </RadzenRow>
    </RadzenCard>
    <RadzenCard class="bg-opacity-10" >
        <RadzenRow AlignItems="AlignItems.Center" class=" rz-my-5 bg-opacity-20 flex-column " >
            <RadzenImage Path="bilder/fill.svg" Style="width: 15rem" AlternateText="generer" class="p-2" />
            <RadzenButton Text="Generer data" class="mt-4 bg-danger" Click="@GeneratorPage" />
        </RadzenRow>
    </RadzenCard>

</RadzenRow>



    @code {
    //@attribute [Authorize]

    private void ImporterPage() { 
            NavigationManager.NavigateTo("Importer");
        }
    private void GeneratorPage()
    {
        NavigationManager.NavigateTo("Generator");
    }
    }











